@page
@model RequestTracker.Pages.TechNotes.IndexModel

@{
    ViewData["Title"] = "Technician Notes";
}

<h1>Note Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TechNote[0].TechnicianID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechNote[0].ServiceRequestID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechNote[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechNote[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TechNote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Technician.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceRequest.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
